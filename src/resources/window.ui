<?xml version="1.0" encoding="UTF-8"?>
<interface>
  <requires lib="gtk" version="4.0"/>
  <template class="ColorfulWindow" parent="AdwApplicationWindow">
    <property name="title">Colorful</property>
    <property name="default-width">600</property>
    <property name="default-height">550</property>

    <child>
      <object class="GtkBox">
        <property name="orientation">vertical</property>

        <child>
          <object class="GtkHeaderBar">
            <property name="show-title-buttons">true</property>
            <child type="end">
              <object class="GtkMenuButton">
                <property name="icon-name">open-menu-symbolic</property>
                <property name="menu-model">primary_menu</property>
              </object>
            </child>
          </object>
        </child>
        <child>
          <object class="AdwClamp">
            <property name="width-request">360</property>

            <property name="child">
              <object class="GtkBox">
                <property name="orientation">vertical</property>
                <property name="spacing">6</property>

                <child>
                  <object class="GtkImage">
                    <property name="icon-name">open-menu-symbolic</property>
                    <property name="icon-size">large</property>
                    <property name="pixel-size">200</property>
                  </object>
                </child>

                <child>
                  <object class="GtkStackSwitcher">
                    <property name="stack">copy_stack</property>
                    <property name="halign">center</property>
                    <property name="hexpand">true</property>
                  </object>
                </child>

                <child>
                  <object class="GtkImage">
                    <property name="icon-name">view-sort-descending-symbolic</property>
                    <property name="pixel-size">100</property>
                  </object>
                </child>

                <child>
                  <object class="GtkStack" id="copy_stack">

                    <child>
                      <object class="GtkStackPage">
                        <property name="title">RGB</property>
                        <property name="child">
                          <object class="ColorfulColorEntry">
                          </object>
                        </property>
                      </object>
                    </child>

                    <child>
                      <object class="GtkStackPage">
                        <property name="title">HEX</property>
                        <property name="child">
                          <object class="ColorfulColorEntry">
                          </object>
                        </property>
                      </object>
                    </child>

                  </object>
                </child>

              </object>
            </property>

          </object>
        </child>

      </object>
    </child>


  </template>

  <menu id="primary_menu">
    <section>
      <item>
        <attribute name="label" translatable="yes">_About colorful</attribute>
        <attribute name="action">app.about</attribute>
      </item>
    </section>
  </menu>
</interface>
